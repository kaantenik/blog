<% if current_user.present? %>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :commenter, "Yorum Yapan" %><br />
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body, "Yorum" %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit "Yorum Ekle", class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
